<div class="container my-1">
  <div class="row p-3">
    <div class="col-12 col-md-8 col-lg-8">
      <h4 class="text-center"><%= @cocktail.name %></h4>
        <%= render 'cocktail' %>
      <h3 class="mt-4">Reviews</h3>
      <span class="btn btn-light"><%= link_to "Leave a review", new_cocktail_review_path(@cocktail) %></span>
        <ul class="list-group list-reviews mt-3">
      <% @cocktail.reviews.each do |review| %>
        <li class="list-group-item"><%= review.content %></li>
        <% end  %>
      </ul>
    </div>
    <div class="col-12 col-md-4 col-lg-4 form-doses mt-4">
      <h5 class="p-2 m-1">Ingredients</h5>
      <% @cocktail.doses.each do |dose|  %>
        <table class="table">
          <thead>
            <tr>
              <th scope="col"><%= dose.ingredient.name %></th>
              <th scope="col"><%= dose.description %></th>
              <th scope="col"><%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fa fa-trash destroy_dose"></i>
                <% end %>
            </tr>
          </thead>
        </table>
      <% end %>
      <br>
      <%=  render 'doses/new', :class => "btn btn-primary"  %>
    </div>
  </div>
</div>

