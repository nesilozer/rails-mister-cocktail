<div class="container">
  <div class="row justify-content-center">
    <div class="card">
        <% if @cocktail.photo.attachment.nil? %>
        <%= image_tag "https://via.placeholder.com/400x300", class: "card-img-top", height: 300, width: 300, crop: :fill  %>
        <% else %>
        <%= cl_image_tag @cocktail.photo.key, height: 400, width: 400, crop: :fill  %>
        <% end %>
    </div>
  </div>
</div>

